      <div class="dashboard-menu-container">
        <div class="dash-icons home-icon-container">
          <div class="dashboard-menu-icons">
            <i class="fa-solid fa-house" style="color: #ffffff"></i>
          </div>
          <div class="dashboard-menu-headings">Home</div>
        </div>
        <div class="dash-icons dashboar-icon-container">
